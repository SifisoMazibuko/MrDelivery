
@{
    Layout = "~/Views/Shared/_PayLayout.cshtml";
}
<style>
    .row .container input {
        height: 65px;
        width: 100%;
        background: #fff;
        position: relative;
        border: 3px solid #fff;
        border-radius: 8px;
        padding: 0.75em;
        font-size:24px;
    }
    .row .col-sm-8 {
        margin-bottom: 200px;
        margin-left:20%;
       
    }
    .rounded-shadow-box {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
    }
    .submit-button {
        background: #FEE155;
        border:0;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, .2);
        box-sizing: border-box;
        color: #31312c;
        cursor: pointer;
        display: block;
        font-size: .875em;
        font-weight: 900;
        height: 4em;
        line-height: 4em;
        outline: none;
        padding: 0;
        text-align:center;
        transition: background 0.2s linear, color 0.2s linear;
        width: 100%;
    }
    .payment-we-accept .title .title-secure {
        display:inline-block;
        background-repeat:no-repeat;
        background-position:left center;
        padding-left: 1.5em;
        background-size: 0.875em;
        margin-bottom: 1em;
    }
    .payment-we-accept .title{
        margin: 0 0 0.75em;
    }
    .payment-we-accept {
        text-align: center;
        font-size: 20px;
    }
    .row h3 {
        color: #131313;
        font-weight:500;
    }
    .input-icon {
        position: absolute;
        height: 1.875em;
        width: 3.75em;
        right: 25px;
        top: 5.5em;
        background-repeat: no-repeat;
        background-position: center center;
    }
    .security-code {
        background: url('../images/pay/cvv.png');
        background-repeat: no-repeat;
    }
    .payment-we-accept .card-icons {
        /*background-image: url('~/wwwroot/images/pay/payment.png');
        background-repeat: no-repeat;
        background-position: center center;
        height: 2.5em;
        margin-bottom: 1em;*/
        position: relative;
        background: url('../images/pay/paymentgate.png');
        background-repeat: no-repeat;
        background-position: center center;
        width: 35%;
        height: 2.6em;
        background-size: cover;
        margin-bottom: 1em;
        margin-left: 32%;
    } 
</style>
<div class="row">
    <div class="container col-sm-8 col-md-8 col-lg-8">
        <h3>Name on Card</h3>
        <div class="rounded-shadow-box">
            <input type="text" name="" value="" />
        </div>
        <h3>Card Number</h3>
        <div class="rounded-shadow-box">
            <input type="text" name="" value="" />
        </div>
        <div>
            <div class="col-sm-6  col-md-6 col-lg-6">
                <h3>Expires</h3>
                <div class="rounded-shadow-box">
                    <input type="text" name="" value="" placeholder="MM / YY" />
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6">
                <h3>Security Code</h3>
                <div class="rounded-shadow-box">
                    <input type="text" name="" value="" />
                    <span class="input-icon security-code"></span>
                </div>
            </div>
        </div>
        <br/><br />
        <div class="payment-we-accept">
            <div class="title">
                We accept
            </div>
            <div class="card-icons"></div>
            <div class="title title-secure">
                <span class="glyphicon glyphicon-lock"></span>
                100% Secure payment
            </div>
        </div>
        <button class="submit-button">
            <span>Pay with card</span>
        </button>
    </div>
</div>
