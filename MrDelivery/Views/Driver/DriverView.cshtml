@model MrDelivery.ViewModels.DriverAccount.DriverViewModel

@{
    ViewData["Title"] = "DriverView";
    Layout = null;
}

<head>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/driver.css" />
        <link rel="shortcut icon" href="~/images/mrd-logo-donut.svg" class="logo" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>

<body class="driverBackground"> 
    <nav class="navbar navbar-inverse navbar-fixed-top" id="increase-header">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/images/mrd-logo-donut.svg" class="logo" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <h1 style="color:#ffd800">Become a Driver</h1>
            </div>
        </div>
    </nav>
    @*<img src="~/images/car-driver.jpg" class="driverBackground" />*@
    <div class="row">
        <div class="col-md-4" id="driverBox">
            <form asp-action="DriverView">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="font-size: 24px; color:#000000">@ViewData["success"]</div><br />
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Where are you located?</label>
                    @*<input asp-for="Location" class="form-control" />*@
                    <select asp-for="Location" name="Location" style="width:100%; height:5%;" >
                        <option value="Alberton">Alberton</option>
                        <option value="Ballito">Ballito</option>
                        <option value="Bedfordview">Bedfordview</option>
                        <option value="Benoni">Benoni</option>
                        <option value="Bloemfontein">Bloemfontein</option>
                        <option value="Brakenfell">Brakenfell</option>
                        <option value="Bryanston">Bryanston</option>
                        <option value="Centurion">Centurion</option>
                        <option value="Constantia">Constantia</option>
                        <option value="Cresta & Randburg">Cresta & Randburg</option>
                        <option value="Durban North">Durban North</option>
                        <option value="East London">East London</option>
                        <option value="East Rand Mall">East Rand Mall</option>
                        <option value="Edenvale">Edenvale</option>
                        <option value="Fordsburg">Fordsburg</option>
                        <option value="Fourways">Fourways</option>
                        <option value="Gardens">Gardens</option>
                        <option value="Gateway">Gateway</option>
                        <option value="Gordons Bay">Gordons Bay</option>
                        <option value="Hatfield">Hatfield</option>
                        <option value="Kempton park">Kempton park</option>
                    </select>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Transport" class="control-label"></label>
                    @*<input asp-for="Transport" class="form-control" />*@
                    <select asp-for="Transport" name="Transport" style="width:100%; height:5%;">
                        <option value="">--Select--</option>
                        <option value="Car">Car</option>
                        <option value="Bike">Bike</option>
                        <option value="No Transport">No Transport</option>
                    </select>
                    <span asp-validation-for="Transport" class="text-danger"></span>
                </div>
                <div class="form-group" >
                    <label asp-for="DriverLicence" class="control-label"></label><br/>
                    @*<input asp-for="DriverLicence" class="form-control" />*@
                    <div style="display:inline-block">
                        <input asp-for="DriverLicence" type="radio" value="Yes" name="DriverLicence" /> Yes<br>
                        <input asp-for="DriverLicence" type="radio" value="No" name="DriverLicence" /> No<br>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label">Full Time / Part Time</label>
                    @*<input asp-for="Duration" class="form-control" />*@
                    <select asp-for="Duration" name="Duration" style="width:100%; height:5%;">
                        <option value="">--Select--</option>
                        <option value="Full Time">Full Time</option>
                        <option value="Part Time">Part Time</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Availability" class="control-label"></label>    
                    @*<input asp-for="Availability" class="form-control" />*@
                    <select asp-for="Availability" name="Availability" style="width:100%; height:5%;">
                        <option value="">--Select--</option>
                        <option value="Anytime">Anytime</option>
                        <option value="Nights and Weekends">Nights and Weekends</option>
                        <option value="Weekends Only">Weekends Only</option>
                        <option value="Weekdays Only">Weekdays Only</option>
                    </select>
                    <span asp-validation-for="Availability" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Please Complete Form" class="btn btn-default" id="driverSubmitButton"/>
                </div>
            </form>
        </div>
    </div>

    <div class="container body-content">
        <footer>
            <p>&copy; 2017 - MrDelivery</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</body>
